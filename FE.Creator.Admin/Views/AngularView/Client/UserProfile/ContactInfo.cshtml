@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<AppLang> AppLangResource
     <!-- Contact Box -->
<div class="box box-primary" ng-init="ctrl.init(CurrentUserProfileId)" ng-controller="ContactController as ctrl">
    <div class="box-header with-border">
        <h3 class="box-title"><i class="fa fa-phone margin-r-5"></i> @AppLangResource["PROFILE_CONTACT"]</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body" ng-if="!ctrl.isEditContact">
        <div class="row">
            <div class="col-md-4">
                <strong>
                    <i class="fa fa-phone margin-r-5"></i> @AppLangResource["PROFILE_TELEPHONE"]</strong>
                    <p class="text-muted">
                        {{ctrl.contact.properties.phone.value}}
                    </p>
            </div>
            <div class="col-md-4">
                <strong>
                    <i class="fa fa-mobile-phone margin-r-5"></i> @AppLangResource["PROFILE_MOBPHONE"]</strong>
                    <p class="text-muted">
                        {{ctrl.contact.properties.mobile.value}}
                    </p>
            </div>
            <div class="col-md-4">
                <strong>
                    <i class="fa fa-envelope-o margin-r-5"></i> @AppLangResource["PROFILE_EMAIL"]</strong>
                    <p class="text-muted">
                        {{ctrl.contact.properties.eMail.value}}
                    </p>
            </div>
            <div class="col-md-4">
                <strong>
                    <i class="fa fa-weixin margin-r-5"></i> @AppLangResource["PROFILE_WECHAT"]</strong>
                    <p class="text-muted">
                        {{ctrl.contact.properties.weChat.value}}
                    </p>
            </div>
            <div class="col-md-4">
                <strong>
                    <i class="fa fa-qq margin-r-5"></i> @AppLangResource["PROFILE_QQ"]</strong>
                    <p class="text-muted">
                        {{ctrl.contact.properties.QQ.value}}
                    </p>
            </div>
            <div class="col-md-4">
                <strong>
                    <i class="fa fa-twitter margin-r-5"></i> @AppLangResource["PROFILE_TWITTER"]</strong>
                    <p class="text-muted">
                        {{ctrl.contact.properties.tweet.value}}
                    </p>
            </div>
            <div class="col-md-4">
                <strong>
                    <i class="fa fa-linkedin margin-r-5"></i> @AppLangResource["PROFILE_LINKEDIN"]</strong>
                    <p class="text-muted">
                        {{ctrl.contact.properties.linkedIn.value}}
                    </p>
            </div>
            <div class="col-md-4">
                <strong>
                    <i class="fa fa-facebook margin-r-5"></i> @AppLangResource["PROFILE_FACEBOOK"]</strong>
                    <p class="text-muted">
                        {{ctrl.contact.properties.facebook.value}}
                    </p>
            </div>
            <div class="col-md-4">
                <strong>
                    <i class="fa fa-file-text-o margin-r-5"></i> @AppLangResource["PROFILE_OTHERCONTACT"]</strong>
                    <p class="text-muted">
                        {{ctrl.contact.properties.freeNote.value}}
                    </p>
            </div>
        </div>
        <ul class="list-inline">
            <li class="pull-right">
                <button class="btn btn-box-tool" type="button" ng-click="ctrl.onContactEditing()"><i class="fa fa-pencil"></i> @AppLangResource["COMMON_BTN_EDIT"]</button>
            </li>
        </ul>
    </div>

    <form class="form-horizontal" ng-if="ctrl.isEditContact">
        <div class="box-body">
            <div class="form-group">
                <label class="control-label col-sm-2">
                    <i class="fa fa-phone"></i> @AppLangResource["PROFILE_TELEPHONE"]</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" ng-model="ctrl.contact.properties.phone.value" />
                    </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    <i class="fa fa-mobile-phone"></i> @AppLangResource["PROFILE_MOBPHONE"]</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" ng-model="ctrl.contact.properties.mobile.value" />
                    </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    <i class="fa fa-envelope-o"></i> @AppLangResource["PROFILE_EMAIL"]</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" ng-model="ctrl.contact.properties.eMail.value" />
                    </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    <i class="fa fa-weixin"></i> @AppLangResource["PROFILE_WECHAT"]</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" ng-model="ctrl.contact.properties.weChat.value" />
                    </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    <i class="fa fa-qq"></i> @AppLangResource["PROFILE_QQ"]</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" ng-model="ctrl.contact.properties.QQ.value" />
                    </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    <i class="fa fa-twitter"></i> @AppLangResource["PROFILE_TWITTER"]</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" ng-model="ctrl.contact.properties.tweet.value" />
                    </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    <i class="fa fa-linkedin"></i> @AppLangResource["PROFILE_LINKEDIN"]</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" ng-model="ctrl.contact.properties.linkedIn.value" />
                    </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    <i class="fa fa-facebook"></i> @AppLangResource["PROFILE_FACEBOOK"]</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" ng-model="ctrl.contact.properties.facebook.value" />
                    </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    <i class="fa fa-file-text-o"></i> @AppLangResource["PROFILE_OTHERCONTACT"]</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" ng-model="ctrl.contact.properties.freeNote.value" />
                    </div>
            </div>
            <ul class="list-inline">
                <li class="pull-right">
                    <button class="btn btn-box-tool" type="button" ng-click="ctrl.saveContact()">
                        <i class="fa fa-save"></i> @AppLangResource["COMMON_BTN_SAVE"]</button>
                        <button class="btn btn-box-tool" type="button" ng-click="ctrl.cancelContactEdit()"><i class="fa fa-close "></i> @AppLangResource["COMMON_BTN_CANCEL"]</button>
                </li>
            </ul>
        </div>
    </form>
    <!-- /.box-body -->
</div>
<!-- /.box -->
