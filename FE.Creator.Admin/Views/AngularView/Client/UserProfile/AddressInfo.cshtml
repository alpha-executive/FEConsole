@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<AppLang> AppLangResource
<div class="box box-primary" ng-init="ctrl.init(CurrentUserProfileId)" ng-controller="AddressController as ctrl">
    <div class="box-header with-border">
        <h3 class="box-title"><i class="fa fa-location-arrow margin-r-5"></i> @AppLangResource["PROFILE_ADDRESS"]</h3>
    </div>
    <div class="box-body" ng-if="!ctrl.isEditAddress">
        <div ng-class="row">
            <div class="col-md-12" ng-repeat="addr in ctrl.addresses">
                <strong>
                    <i class="fa fa-map-marker  margin-r-5"></i> @AppLangResource["PROFILE_LOCATION"]</strong>
                    <p class="text-muted">
                        {{addr | formataddress}}
                    </p>
                    <hr />
            </div>
        </div>
        <ul class="list-inline">
            <li class="pull-right">
                <button class="btn btn-box-tool" type="button" ng-click="ctrl.onAddressEditing()"><i class="fa fa-pencil"></i> @AppLangResource["COMMON_BTN_EDIT"]</button>
            </li>
        </ul>
    </div>

    <form class="form-horizontal" ng-if="ctrl.isEditAddress">
        <div class="box-body">
            <div class="box box-warning" ng-repeat="addr in ctrl.addresses">
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-sm-2">
                                    <i class="fa fa-flag"></i> @AppLangResource["PROFILE_COUNTRY"]</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" ng-model="addr.properties.country.value" />
                                    </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-sm-2">
                                    <i class="fa fa-map-pin"></i> @AppLangResource["PROFILE_PROVINCE"]</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" ng-model="addr.properties.province.value" />
                                    </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-sm-2">
                                    <i class="fa fa-map-pin"></i> @AppLangResource["PROFILE_CITY"]</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" ng-model="addr.properties.city.value" />
                                    </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-sm-2">
                                    <i class="fa fa-map-pin"></i> @AppLangResource["PROFILE_STREET"]</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" ng-model="addr.properties.address.value" />
                                    </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-sm-2">
                                    <i class="fa fa-map-pin"></i> @AppLangResource["PROFILE_BUILDING"]</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" ng-model="addr.properties.address1.value" />
                                    </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-sm-2">
                                    <i class="fa fa-map-signs"></i> @AppLangResource["PROFILE_POSTCODE"]</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" ng-model="addr.properties.postCode.value" />
                                    </div>
                            </div>
                        </div>
                    </div>
                    <ul class="list-inline">
                        <li class="pull-right">
                            <button class="btn btn-box-tool" type="button" ng-click="ctrl.deleteAddress(addr)"><i class="fa fa-trash"></i> @AppLangResource["COMMON_BTN_DELETE"]</button>
                        </li>
                    </ul>
                </div>
            </div>

            <ul class="list-inline">
                <li class="pull-right">
                    <button class="btn btn-box-tool" type="button" ng-click="ctrl.onAddNewAddress()">
                        <i class="fa fa-plus"></i> @AppLangResource["COMMON_BTN_ADD"]</button>
                        <button class="btn btn-box-tool" type="button" ng-click="ctrl.saveAddress()">
                            <i class="fa fa-save"></i> @AppLangResource["COMMON_BTN_SAVE"]</button>
                            <button class="btn btn-box-tool" type="button" ng-click="ctrl.cancelAddressEdit()"><i class="fa fa-close "></i> @AppLangResource["BOOK_BTN_CANCEL"]</button>
                </li>
            </ul>
        </div>
    </form>
</div>
