@using Microsoft.AspNetCore.Mvc.Localization

@inject IHtmlLocalizer<AppLang> AppLangResource
<div class="box box-primary">
    <div class="box-body no-border">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2">
                    <i class="fa fa-tag"></i> @AppLangResource["TASKMGR_LBL_TASKNAME"]</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" ng-model="ctrl.currentTask.objectName" auto-focus />
                    </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    <i class="fa fa-commenting"></i> @AppLangResource["TASKMGR_LBL_DESC"]
                </label>
                <div class="col-sm-10">
                    <textarea rows="3" class="form-control" ng-model="ctrl.currentTask.properties.taskDesc.value"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    <i class="fa fa-navicon"></i> @AppLangResource["TASKMGR_LBL_TASKTYPE"]
                </label>
                <div class="col-sm-10">
                    <div class="form-control">
                        <input icheck type="radio" name="tasktype" ng-model="ctrl.currentTask.properties.taskType.value" value="0" /> @AppLangResource["TASKMGR_RDO_IMPORTANT"]
                        <input icheck type="radio" name="tasktype" ng-model="ctrl.currentTask.properties.taskType.value" value="1" /> @AppLangResource["TASKMGR_RDO_MEDIUM"]
                        <input icheck type="radio" name="tasktype" ng-model="ctrl.currentTask.properties.taskType.value" value="2" /> @AppLangResource["TASKMGR_RDO_LOW"]
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    <i class="fa fa-calendar"></i> @AppLangResource["TASKMGR_LBL_STARTDATE"]
                </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control field-datepicker" ng-model="ctrl.currentTask.properties.taskStartDate.value" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    <i class="fa fa-calendar"></i> @AppLangResource["TASKMGR_LBL_ENDDATE"]
                </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control field-datepicker" ng-model="ctrl.currentTask.properties.taskExpEndDate.value" />
                </div>
            </div>
            <ul class="list-inline">
                <li class="pull-right">
                    <button class="btn btn-box-tool" type="button" ng-click="ctrl.saveTask()">
                        <i class="fa fa-save"></i> @AppLangResource["COMMON_BTN_SAVE"]</button>
                        <button class="btn btn-box-tool" type="button" ng-click="ctrl.cancelTask()"><i class="fa fa-close "></i> @AppLangResource["COMMON_BTN_CANCEL"]</button>
                </li>
            </ul>
        </form>
    </div>
</div>
<script type="text/javascript" src="~/js/applydatepicker.js" asp-append-version="true"></script>
