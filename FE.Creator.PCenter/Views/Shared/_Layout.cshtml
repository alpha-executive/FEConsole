@using Microsoft.AspNetCore.Mvc.Localization
@using FE.Creator.PCenter.CutomProvider;
@using FE.Creator.PCenter
@inject IHtmlLocalizer<SharedLangResource> SharedResource
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/css/jquery.bxslider.css" asp-append-version="true">
    <link rel="stylesheet" type="text/css" href="~/css/coreui-icons-brand.min.css" asp-append-version="true">
    <link rel="stylesheet" type="text/css" href="~/css/font-awesome.min.css" asp-append-version="true">
    <link rel="stylesheet" type="text/css" href="~/css/animate.css" asp-append-version="true">
    <link rel="stylesheet" type="text/css" href="~/css/style.css" asp-append-version="true">
</head>
<body>
    <div class="loader"></div>
    <div id="pagecontainer">
            <!--HEADER-->
    <div class="header">
      <div class="bg-color">
        <header id="main-header">
          
          <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
              <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
                <a class="navbar-brand" href="#">FE<span class="logo-dec">TECH</span>LAB</a>
              </div>
              <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                  <li class="active"><a href="#main-header">@SharedResource["Home"]</a></li>
                  <li class=""><a href="#feature">@SharedResource["Feature"]</a></li>
                  <li class=""><a href="#service">@SharedResource["FEConsole"]</a></li>
                  <li class=""><a href="#donate"><i class="fa fa-heart red"></i> @SharedResource["Donate"]</a></li>
                  <li class=""><a href="#contact">@SharedResource["Contact Us"]</a></li>
                  @if(Context.IsUserLogin()){
                    <li class="">
                        <form asp-controller="Home" asp-action="Logout" method="post">
                            <button type="submit" class="btn-login"><i class="fa fa-user"></i> @SharedResource["Logout"]</button>
                        </form>
                    </li>
                  }
                  else {
                    <li>
                      <form asp-controller="Home" asp-action="Login"  method="post">
                        <input type="hidden" name="returnUrl" id="returnUrl"  value="/" />
                        <button type="submit" class="btn-login"><i class="fa fa-sign-in"></i> @SharedResource["Login"]</button>
                      </form>
                    </li>
                  }
                </ul>
              </div>
            </div>
          </nav>
          
        </header>
       
        <div class="wrapper">
          <div class="container">
            <div class="row">
              <div class="banner-info text-center wow fadeIn delay-05s">
                @if(Context.IsUserLogin())
                {
                  <h1 class="bnr-title">@SharedResource["Welcome <span>{0}</span>!", Context.GetLoginUserDisplayName()]</h1>
                }
                <h2 class="bnr-sub-title">@SharedResource["The Platform for Creative IT System!!"]</h2>
                <p class="bnr-para">@SharedResource["The FETECHLAB provides individuals and organizations with commercially-free, scalable and easy to use IT Systems like FEConsole that will bring people extra share of all that make them happiest!"]</p>
                <h1 class="bnr-title">@SharedResource["FEConsole Version 1.0 is Now General Available!"]</h1>
                <div class="brn-btn">
                  <a href="#download" class="btn btn-download">@SharedResource["Download now!"]</a>
                  <a href="/home/livepreview" class="btn btn-more">@SharedResource["Live Preview"]</a>
                </div>
                <div class="overlay-detail">
                  <a href="#feature"><i class="fa fa-angle-down"></i></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--/ HEADER-->
        @RenderBody()

     <partial name="_CookieConsentPartial" />
     <footer id="footer" class="ft-color">
        <div class="container">
            <div class="row">
                <div class="credits text-center">
                    <p style="color:#be9e21;">@SharedResource["Copyright"] &copy; FETECHLAB @DateTime.Now.Year </p>
                    <p style="color: #67696c;">
                        <a style="color: #67696c;" target="_blank" href="http://www.beian.gov.cn/portal/registerSystemInfo?recordcode=11011502004397"><img src="~/images/beian.png"/><span>京公网安备 11011502004397号</span></a>
                        <span>京ICP备2020039479号</span>
                    </p>
                    <!--
                    All the links in the footer should remain intact.
                    You can delete the links only if you purchased the pro version.
                    Licensing information: https://bootstrapmade.com/license/
                    Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/buy/?theme=Baker
                    -->
                    <p>Designed by <a href="https://bootstrapmade.com/" style="color:#67696c;">BootstrapMade</a></p>

                </div>
            </div>
        </div>
      </footer>
    </div>

