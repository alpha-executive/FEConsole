@model ErrorViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@using FE.Creator.PCenter
@inject IHtmlLocalizer<SharedLangResource> SharedResource
@{
    ViewData["Title"] = SharedResource["Error"];
}

<h1 class="text-danger">@SharedResource["Error"]</h1>
<h2 class="text-danger">@SharedResource["An error occurred while processing your request."]</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>@SharedResource["Development Mode"]</h3>
<p>
    @SharedResource["Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred."]
</p>
<p>
    @SharedResource["<strong>Development environment should not be enabled in deployed applications</strong>, as it can result in sensitive information from exceptions being displayed to end users. For local debugging, development environment can be enabled by setting the <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong>, and restarting the application."]
</p>
