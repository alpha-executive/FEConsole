@using Microsoft.AspNetCore.Mvc.Localization
@using FE.Creator.AspNetCoreUtil
@inject IHtmlLocalizer<ConsolePortal> localResource
@{
    string donateLink = Context.GetConfigValue<string>("SiteSettings:DonateUrl");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@localResource["PROTAL_TITLE"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="favicon.ico">

    <!-- CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/flexslider/css/flexslider.css" rel="stylesheet" type="text/css" />
    <link href="~/css/animate.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/lib/lightbox/css/angular-bootstrap-lightbox.min.css" rel="stylesheet" type="text/css" />

    <!-- FONTS -->
    <link href="~/lib/fontawesome/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/share/css/share.min.css">
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />

    <script src="~/js/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/jquery.flexslider-min.js" type="text/javascript" asp-append-version="true"></script>
    @*<script src="~/js/jquery.prettyPhoto.js" type="text/javascript"></script>*@
    <script src="~/js/animate.js" type="text/javascript"></script>
    <script src="~/js/jquery.nicescroll.min.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/superfish.min.js" type="text/javascript" asp-append-version="true"></script>

    @*<script src="~/js/jquery.BlackAndWhite.js" asp-append-version="true"></script>*@

    <script src="~/lib/angularjs/angular.min.js" type="text/javascript"></script>
    <script src="~/lib/angularjs/angular-sanitize.min.js" type="text/javascript"></script>
    <script src="~/lib/angularjs/angular-route.min.js" type="text/javascript"></script>
    <script src="~/lib/angularjs/angular-messages.min.js" type="text/javascript"></script>
    <script src="~/lib/angularjs/angular-ui-notification.min.js" type="text/javascript"></script>
    <script src="~/js/angular-animate.js" type="text/javascript"></script>
    <script src="~/js/ui-bootstrap-tpls-1.3.2.js" type="text/javascript"></script>
    <script src="~/lib/lightbox/js/angular-bootstrap-lightbox.js" type="text/javascript"></script>
    <script type="text/javascript" src='@Url.Action("GlobalJSVariableFile","Home")'></script>

    <script src="~/js/portalentry.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/portaldataservice.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/portalpageservice.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/portalutilservice.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/portalcontrollers.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/bwportal.js" type="text/javascript" asp-append-version="true"></script>
</head>
<body>
    <!-- PRELOADER -->
    <img id="preloader" src="~/images/preloader.gif" alt="" />
    <!-- //PRELOADER -->
    <div class="preloader_hide">
        <!-- PAGE -->
        <div id="page" ng-app="fePortal">
            @RenderBody()
        </div><!-- //PAGE -->
        <!-- FOOTER -->
        <!-- CONTAINER -->
        <footer>
            <div class="container">
                <!-- ROW -->
                <div class="row">

                    <div class="col-lg-4 col-md-4 col-sm-6 ">
                        <h4><b>@localResource["PORTAL_FOOTER_DONATE"]</b></h4>
                        <div>@localResource["PORTAL_FOOTER_DONATE_DESC"]</div>
                        <div><a href="@donateLink" class="text-info"> @localResource["PORTAL_FOOTER_DONATE_LINK"]</a></div>
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-6 foot_about_block">
                        <h4><b>@localResource["PORTAL_FOOTER_ABOUT"]</b></h4>
                        <p>@localResource["PORTAL_FOOTER_ABOUT_DESC"]</p>
                        <h4><b>@localResource["PORTAL_FOOTER_LICENSE"]</b></h4>
                        <p>@localResource["PORTAL_FOOTER_LICENSE_DESC"]</p>
                    </div>

                    <div class="respond_clear"></div>

                    <div class="col-lg-4 col-md-4">
                        <h4><b>@localResource["PORTAL_FOOTER_CONTACTUS"]</b></h4>
                        <ul class="contacts-list">
                            <li><i class="fa fa-envelope-o"></i> alpha_executive@hotmail.com</li>
                            <li><i class="fa fa-envelope-o"></i> alpha_executive@126.com</li>
                            <li><i class="fa fa-wechat"></i> ksfounder</li>
                            <li><i class="map_show fa fa-map-marker"></i> @localResource["PORTAL_FOOTER_CONTACT_ADDR"]</li>
                        </ul>
                    </div>
                </div><!-- //ROW -->
            </div><!-- //CONTAINER -->
        </footer><!-- //FOOTER -->
    </div>
</body>
</html>
